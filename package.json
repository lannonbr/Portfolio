{
  "name": "portfolio",
  "private": true,
  "description": "My personal portfolio website as of 2019",
  "version": "0.1.0",
  "author": "Benjamin Lannon <benjamin@lannonbr.com>",
  "type": "module",
  "dependencies": {
    "@mdx-js/mdx": "^2.0.0-next.8",
    "@mdx-js/preact": "^2.0.0-next.8",
    "@sector/breadbox": "^0.0.4",
    "dayjs": "^1.8.34",
    "globby": "^11.0.1",
    "gray-matter": "^4.0.2",
    "js-yaml": "^3.14.0",
    "parse-numeric-range": "^1.2.0",
    "preact": "^10.4.8",
    "preact-render-to-string": "^5.1.10",
    "prettier": "^2.1.1",
    "prism-react-renderer": "^1.1.1",
    "prismjs": "^1.21.0",
    "react-helmet": "^6.1.0",
    "rehype-local-image-to-cloudinary": "^1.0.2",
    "rehype-slug": "^3.0.0",
    "tailwindcss": "^1.7.5",
    "tailwindcss-dark-mode": "^1.1.6",
    "toast": "^0.3.4",
    "unist-util-visit": "^2.0.3"
  },
  "license": "MIT",
  "scripts": {
    "build": "yarn build:css && toast incremental .",
    "incremental": "toast incremental .",
    "build:css": "NODE_ENV=production tailwindcss build src/styles/tailwind-include.css --config tailwind.config.cjs --output public/style.css",
    "clean": "rm -rf public .tmp && yarn prepare",
    "prepare": "breadbox --dest public/web_modules",
    "breadbox": "breadbox --dest public/web_modules",
    "post": "npx plop --plopfile plopfile.cjs post",
    "serve": "npx http-server -p 8000 public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lannonbr/portfolio"
  },
  "bugs": {
    "url": "https://github.com/lannonbr/portfolio/issues"
  },
  "snowpack": {
    "exclude": [
      "public/**",
      "toast.js",
      "fetch-*.js"
    ],
    "installOptions": {
      "alias": {
        "react": "preact/compat"
      }
    },
    "knownEntrypoints": [
      "preact",
      "preact/hooks",
      "@mdx-js/preact",
      "preact/compat",
      "react-helmet"
    ]
  }
}
